---
import ButtonLight from "./ButtonLight.astro";

const links = [
  { href: "#forside", text: "Forside" },
  { href: "#frivillig", text: "Vores frivillige" },
  { href: "#arbejde", text: "Vores arbejde" },
  { href: "#tilmelding", text: "Tilmelding" },
  { href: "#os", text: "Om os" }
];
---

<nav class="navigation">
  <!-- Logo -->
  <a href="/" class="logo">
    <svg width="250" height="51" viewBox="0 0 250 51" fill="none" xmlns="http://www.w3.org/2000/svg">
      <!-- Din SVG-grafik -->
      <rect width="250" height="51" fill="black" />
    </svg>
  </a>

  <!-- Menu -->
  <ul class="nav-links">
    {links.map(link => (
      <li><a href={link.href}>{link.text}</a></li>
    ))}
    <li><ButtonLight text="Find os" /></li>
  </ul>
</nav>

<style>
  .navigation {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background-color: white;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }

  .nav-links a {
    text-decoration: none;
    color: black;
    font-size: 1rem;
  }
</style>
